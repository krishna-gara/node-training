Node js

	Node
	NODE -E "sfasdf"
	NODE FILENAME.JS

	Modules and imports
	
	hello.js
	module.exports.hi = "hello";

	module.exports.speak = function(msg) { 

		console.log(msg);
	};

	app.js
	
	var obj = require('./hello');
	console.log(obj.hi);
	console.log(obj.speak('1'));

	
		
		
